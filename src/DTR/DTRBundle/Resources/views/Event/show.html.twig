{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Event</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Guestlimit</th>
                <td>{{ entity.guestLimit }}</td>
            </tr>
            <tr>
                <th>Fundslimit</th>
                <td>{{ entity.fundsLimit }}</td>
            </tr>
            <tr>
                <th>Guests</th>
                <td>{{ entity.guestAmount }}</td>
            </tr>
        </tbody>
    </table>
    <p>
        Host: {{ entity.user }}
    </p>
    Guests:
    {% for guests in entity %}
        <br>
        {{ guests }}
    {% endfor %}
    <ul class="record_actions">
        <li>
            <a href="{{ path('event') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('event_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
        {% if app.user == entity.user %}You are the host.{% endif %}
        <li>
            <input type="submit" value="Join">
        </li>
    </ul>
{% endblock %}
