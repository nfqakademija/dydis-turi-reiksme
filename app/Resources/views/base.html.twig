<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <!-- Bootstrap compiled and minified CSS -->
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==" crossorigin="anonymous">
            <!-- Bootstrap Yeti theme -->
            <link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.5/yeti/bootstrap.min.css" rel="stylesheet" integrity="sha256-gJ9rCvTS5xodBImuaUYf1WfbdDKq54HCPz9wk8spvGs= sha512-weqt+X3kGDDAW9V32W7bWc6aSNCMGNQsdOpfJJz/qD/Yhp+kNeR+YyvvWojJ+afETB31L0C4eO0pcygxfTgjgw==" crossorigin="anonymous">
            <link href="{{ asset('css/stylesheets.css') }}" rel="stylesheet" type="text/css" />
            <!-- jQuery -->
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <div class="container">
    <body>
        {% block navigation %}
            <nav class="navbar navbar-default">
                <div class="container-fluid">

                    <div class="navbar-header">
                        <a class="navbar-brand" href="{{ url('_index') }}">Dydis turi reikšmę</a>
                    </div>

                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                        <ul class="nav navbar-nav navbar-right">
                            {% if not app.user %}
                                <li class="dtr_login"><a class="dtr_login" href="{{ url('fos_user_security_login') }}">Prisijungti</a></li>
                                <li><a class="dtr_register" href="{{ url('fos_user_registration_register') }}">Registruotis</a></li>
                            {% else %}
                                <li><a class="dtr_user" href="">{{ app.user.username }}</a></li>
                                <li><a class="dtr_logout" href="{{ url('fos_user_security_logout') }}">Atsijungti</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>
        {%  endblock %}

            {% block body %}{% endblock %}
        {% block footer %}
            <foooter class="footer" role="contentinfo">
                <div class="container">
                    <p>© 2015 Dydis turi reikšmę.
                </div>
            </foooter>
        {% endblock %}
        {% block javascripts %}
            <!-- Bootstrap compiled and minified JavaScript -->
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js" integrity="sha512-K1qjQ+NcF2TYO/eI3M6v8EiNYZfA95pQumfvcVrTHtwQVDG+aHRqLi/ETn2uB+1JqwYqVG3LIvdm9lj6imS/pQ==" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
