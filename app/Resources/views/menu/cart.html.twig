{% if items is defined %}
    <div>
        <div>
            <p>Cart:</p>
        </div>
        <div>
            {% for item in items %}
                <p>{{ item.getProduct().getName() }}</p>
                <a href="/event/{{ hash }}/shops/{{ shopName }}/remove-from-cart/{{ item.getId() }}">Remove</a>
            {% endfor %}
        </div>
    </div>
{% endif %}
