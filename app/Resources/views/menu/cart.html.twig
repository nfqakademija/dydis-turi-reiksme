{% if items is defined %}
    <div style="float: right;">
        <div id="cart">
            <p>Cart:</p>
        </div>
            {% for item in items %}
                <div>
                <p>{{ item.getProduct().getName() }} {{ item.getProduct().getPrice() * item.getQuantity() }}€ ({{ item.getQuantity() }})</p>
                {#<a href="/event/{{ hash }}/shops/{{ shopName }}/remove-from-cart/{{ item.getId() }}">Remove</a>#}
                <a href="{{ path('_remove_from_cart', {'hash': event.getHash(), 'itemId': item.getId() }) }}" class="dtr_remove_product" role="button" data-hash="{{ event.getHash() }}" data-id="{{ item.getId() }}">Remove</a>
                </div>
            {% endfor %}
            <div>
                <p>Total cost: {{ totalCost }}€</p>
                <a href="{{ path('_delete_cart', {'hash': event.getHash() }) }}" class="btn btn-default btn-sm dtr_delete_cart" role="button" data-hash="{{ event.getHash() }}">Delete cart</a>
                <button class="btn btn-default btn-sm">Checkout</button>
            </div>
    </div>
{% endif %}