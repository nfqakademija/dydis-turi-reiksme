{%  extends 'base.html.twig' %}

{% block body %}

    <div class="search">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>

    <div class="shops_list">

        {% for shop in shops %}
            <div class="col-md-4">
                <img src="{{ asset('' ~ shop.getImageLocation() ~ '') }}" class="img-thumbnail" .img-responsive>
                <a href="shops/{{ shop.getSlug() }}">{{ shop.getName() }}</a>
            </div>
        {% endfor %}

    </div>

{% endblock %}